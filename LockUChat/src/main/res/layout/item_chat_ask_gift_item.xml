<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="92dp"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="74dp"
            android:layout_height="74dp">
            <ImageView
                android:id="@+id/iv_ask_4_gift"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <TextView
                android:id="@+id/tv_ask_4_gift_name"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:text="Chocolates"
                android:maxWidth="80dp"
                android:textColor="#99ffffff"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_centerHorizontal="true"
                android:textSize="12sp"
                android:layout_marginBottom="2dp"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_ask_4_gift_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150"
            android:textColor="#FF4A52"
            android:textSize="12sp"
            android:drawablePadding="4dp"
            android:layout_marginTop="2dp"
            android:drawableEnd="@mipmap/icon_diamonds_gift"
            />
        <TextView
            android:id="@+id/tv_send_gift"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/give"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/bg_ask"
            android:textSize="11sp"
            />
    </LinearLayout>
</LinearLayout>