<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_qa"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="7dp"
    android:paddingTop="7dp"
    android:gravity="start">
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7:11"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_head_left"
            android:layout_width="44dp"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/ic_launcher_round"
            android:visibility="gone"
            />
        <include
            layout="@layout/layout_msg_progress"/>
        <LinearLayout
            android:id="@+id/content_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_msg_left"
            android:padding="13dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:maxWidth="220dp"
                android:text="111111111111111111111111111111111111111111111111"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_answer"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_head_right"
            android:layout_width="44dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:src="@mipmap/ic_launcher_round"
            android:visibility="gone"
            />
    </LinearLayout>

</LinearLayout>