<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="7dp"
    android:paddingTop="7dp"
    android:gravity="end">
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7:11"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/ll_msg_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_head_left"
            android:layout_width="44dp"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/ic_launcher_round"
            android:visibility="gone"
            />
        <include
            android:id="@+id/layout_msg_progress"
            layout="@layout/layout_msg_progress"/>
        <LinearLayout
            android:id="@+id/content_view"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_msg_left"
            android:padding="13dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_voice_left"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/ic_voice_left3"/>
            <TextView
                android:id="@+id/tv_chat_msg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:maxWidth="220dp"
                android:gravity="end"
                android:text="11111"
                />
            <ImageView
                android:id="@+id/iv_voice_right"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="14dp"
                android:background="@drawable/ic_voice_right3"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_head_right"
            android:layout_width="44dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:src="@mipmap/ic_launcher_round"
            android:visibility="gone"
            />
    </LinearLayout>

</LinearLayout>