<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_float_notification_out"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_content_float_notification"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_float_notification"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_head_float_notification"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@mipmap/app_icon"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title_float_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="17sp"
                android:textColor="#333333"/>
            <TextView
                android:id="@+id/tv_content_float_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="12sp"
                android:layout_below="@+id/tv_title_float_notification"
                android:text="1111"
                android:textColor="#999999"/>
        </RelativeLayout>
        <TextView
            android:layout_width="74dp"
            android:layout_height="30dp"
            android:text="@string/reply"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="13sp"
            android:background="@drawable/btn_reply"/>
    </LinearLayout>

</LinearLayout>