<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_qa"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="7dp"
    android:paddingTop="7dp"
    android:gravity="center_horizontal">
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7:11"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include
            layout="@layout/layout_msg_progress"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_ask"
                android:layout_width="297dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="11sp"
                android:maxWidth="220dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/bg_ask_for_title"
                android:text="1111111111111111111111111111111111111111"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_ask_gifts"
                android:layout_width="301dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingTop="18dp"
                android:paddingBottom="20dp"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:background="@drawable/bg_ask_gifts"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>