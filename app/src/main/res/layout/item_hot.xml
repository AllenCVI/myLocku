<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="13dp"
    android:layout_marginStart="7dp"
    android:layout_marginEnd="6dp"
    android:layout_height="204dp">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:src="@mipmap/bg_she_detail_head"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_online"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="@string/online"
        android:gravity="center"
        android:textColor="@color/white"
        android:drawableStart="@drawable/point_online"
        android:drawablePadding="3dp"
        android:paddingStart="6dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:paddingEnd="6dp"
        android:background="@drawable/bg_hot_online"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_busy"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="@string/busy"
        android:gravity="center"
        android:textColor="@color/white"
        android:drawableStart="@drawable/point_busy"
        android:drawablePadding="3dp"
        android:paddingStart="6dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:paddingEnd="6dp"
        android:background="@drawable/bg_hot_online"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textSize="11sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="5dp"
        android:gravity="center_vertical"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/rl_btn"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="40dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_level"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="3dp"
            />

        <ImageView
            android:id="@+id/iv_country"
            android:layout_width="20dp"
            android:layout_marginStart="2dp"
            android:layout_height="20dp"
            android:layout_marginTop="1dp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="9dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/iv_hi"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/icon_hi"
            android:visibility="gone"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_msg"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/icon_msg"
            android:visibility="gone"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_audio"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/icon_hot_audio"
            android:visibility="gone"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_video"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/icon_hot_video"
            android:visibility="visible"
            android:scaleType="centerCrop" />
    </RelativeLayout>

</RelativeLayout>