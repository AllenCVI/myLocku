<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:text="@string/are_you_sure_delete_picture"
        android:background="#16133c"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:paddingBottom="33dp"
        android:paddingTop="33dp"/>
    <LinearLayout
        android:layout_width="262dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:visibility="visible">
        <TextView android:id="@+id/tv_delete_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_1d1a4d"
            android:gravity="center"
            android:text="@string/cancel"
            android:textSize="14sp"
            android:textColor="@color/white"/>
        <TextView android:id="@+id/tv_delete_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_ff4a52"
            android:gravity="center"
            android:text="@string/delete"
            android:textSize="14sp"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>