<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_110e2e"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_title_back_navigator"></ImageView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/register_title"
                android:textColor="@color/white"
                android:textSize="20sp"></TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_male"
                        android:layout_width="87dp"
                        android:layout_height="87dp"
                        android:background="@drawable/shape_cffffd545_oval">

                        <ImageView
                            android:id="@+id/iv_male"
                            android:layout_width="77dp"
                            android:layout_height="77dp"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/male_press"></ImageView>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/male"
                        android:textColor="@color/white"
                        android:textSize="13sp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_female"
                        android:layout_width="87dp"
                        android:layout_height="87dp">

                        <ImageView
                            android:id="@+id/iv_female"
                            android:layout_width="77dp"
                            android:layout_height="77dp"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/female_normal"></ImageView>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/female"
                        android:textColor="@color/color_66ffffff"
                        android:textSize="13sp"></TextView>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="20dp"
                android:text="@string/age"
                android:textColor="@color/white"
                android:textSize="20sp"></TextView>

            <cn.carbswang.android.numberpickerview.library.NumberPickerView
                android:id="@+id/picker"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:contentDescription="test_number_picker_view"
                app:npv_DividerColor="#50ffffff"
                app:npv_DividerMarginLeft="60dp"
                app:npv_DividerMarginRight="60dp"
                app:npv_ItemPaddingHorizontal="5dp"
                app:npv_ItemPaddingVertical="5dp"
                app:npv_RespondChangeOnDetached="false"
                app:npv_ShownCount="3"
                app:npv_TextColorNormal="@color/color_66ffffff"
                app:npv_TextColorSelected="@color/white"
                app:npv_TextSizeNormal="20sp"
                app:npv_TextSizeSelected="26sp"
                app:npv_WrapSelectorWheel="true" />


            <TextView
                android:id="@+id/tv_register"
                android:layout_width="258dp"
                android:layout_height="52dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_cff4a52_c26"
                android:gravity="center"
                android:text="@string/register_btn"
                android:textColor="@color/white"
                android:textSize="16sp"></TextView>

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="@string/click_here_for_old_accounts"
                android:textColor="#73ffffff"
                android:textSize="12sp"></TextView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</LinearLayout>