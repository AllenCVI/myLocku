<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout android:id="@+id/llt_item_diamond"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@drawable/bg_diamond_select"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="18dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_my_diamond_diamond"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/tv_diamond_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:text="400"
            android:includeFontPadding="false"
            android:layout_marginStart="13dp" />

        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_diamond_off_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                tools:text="0 0ff"
                android:includeFontPadding="false"
                android:layout_marginStart="33dp"
                android:background="@drawable/bg_diamond_off_select" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="33dp" />

            <TextView
                android:id="@+id/tv_diamond_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="0"
                android:layout_marginEnd="16dp"
                android:includeFontPadding="false" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_no_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            tools:text="0 0ff"
            android:includeFontPadding="false"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bg_diamond_off_select" />
    </LinearLayout>


</RelativeLayout>