<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="396dp"
        android:src="@mipmap/bg_top_rank"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ranking_list"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="179dp"
        android:layout_height="30dp"
        android:background="@mipmap/bg_rank_title"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_goddess"
            android:layout_width="81dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:layout_marginEnd="4dp"
            android:textSize="11sp"
            android:text="@string/goddess"
            android:background="@drawable/selector_rank_title_bg"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_rich"
            android:layout_width="81dp"
            android:layout_height="24dp"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:textSize="11sp"
            android:text="@string/rich"
            android:background="@drawable/selector_rank_title_bg"
            android:textColor="@color/white"/>
    </LinearLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_title"/>
    <TextView
        android:id="@+id/tv_rule"
        android:layout_width="41dp"
        android:layout_height="30dp"
        android:text="@string/rule"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/ll_title"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical|end"
        android:paddingEnd="5dp"
        android:textColor="@color/color_5753af"
        android:background="@mipmap/bg_rule"
        android:textSize="10sp"
        />
</RelativeLayout>