<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:gravity="center_horizontal"
    >

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:clipChildren="false"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_c242156_tlf10"
            android:layout_marginTop="40dp"
            android:clipChildren="false"
            >

            <FrameLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="-35dp"
                android:background="@drawable/shape_circle_transparent_30"
                android:layout_gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"/>
            </FrameLayout>
            
            <ImageView
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="-5dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/retention_dialog_top_img"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/shape_c242156_blf10"
            >

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/iv_countyFlag"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="3dp"
                />

            <ImageView
                android:id="@+id/iv_level"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="3dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@color/color_B3FFFFFF"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="14dp"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_exit"
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_ctranslate_c20_sffffff"
                android:gravity="center"
                android:text="@string/Exit"
                android:textSize="14sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_goChat"
                android:layout_width="match_parent"
                android:layout_marginStart="13dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_cff4a52_c20"
                android:gravity="center"
                android:text="@string/Go_chat"
                android:textSize="14sp"
                android:textColor="@color/white" />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

</LinearLayout>