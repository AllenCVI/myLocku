<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:gravity="center">


    <LinearLayout
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_c16143c_c10"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tip_title"
            android:layout_marginTop="20dp"
            android:background="#16133c"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="@string/are_your_sure_switch_user"
            android:background="#16133c"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:paddingBottom="42dp"
            android:paddingTop="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_switch_cancel"
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_ctranslate_c20_sffffff"
                android:gravity="center"
                android:text="@string/cancel"
                android:textSize="14sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_switch_confirm"
                android:layout_width="match_parent"
                android:layout_marginStart="13dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_cff4a52_c20"
                android:gravity="center"
                android:text="@string/confirm"
                android:textSize="14sp"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>