<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#16143c">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        >
        <ImageView android:id="@+id/iv_title_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_title_back_navigator"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:onClick="back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="@string/avatar"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <FrameLayout android:id="@+id/framelayout_portrait"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:background="@drawable/shape_circle_transparent_30"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48dp">
        <ImageView android:id="@+id/iv_portrait"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:layout_gravity="center"/>
    </FrameLayout>

    <TextView android:id="@+id/tv_upload_profile_picture"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_common_btn_bg"
        android:layout_marginTop="105dp"
        android:onClick="confirm"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="16dp"
        android:text="@string/upload_profile_picture"/>
</LinearLayout>