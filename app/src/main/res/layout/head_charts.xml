<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_headview"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="9dp"
    android:visibility="visible"
    android:paddingEnd="9dp">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginTop="27dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="101dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_charts23"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_nickname2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLength="6"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_level2"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="4dp"
                    />
                <ImageView
                    android:id="@+id/iv_country2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="2dp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_score2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ff4a53"
                android:textSize="17sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="2dp"
                android:drawableStart="@mipmap/icon_charts_heart" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_headimg2"
            android:layout_width="73dp"
            android:layout_height="72dp"
            android:src="@mipmap/img_charts_head"
            android:background="@mipmap/bg_charts_head2"
            android:layout_alignStart="@id/ll_2"
            android:layout_marginStart="9dp"
            android:paddingStart="12dp"
            android:paddingTop="11dp"
            android:paddingEnd="3dp"
            android:paddingBottom="2dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="101dp"
            android:layout_height="136dp"
            android:background="@drawable/bg_charts1"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:paddingTop="28dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nickname1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLength="6"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
                <ImageView
                    android:id="@+id/iv_level1"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="4dp"
                    />
                <ImageView
                    android:id="@+id/iv_country1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="2dp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_score1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ff4a53"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="17sp"
                android:drawableStart="@mipmap/icon_charts_heart" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_headimg1"
            android:layout_width="75dp"
            android:layout_height="74dp"
            android:src="@mipmap/img_charts_head"
            android:background="@mipmap/bg_charts_head1"
            android:layout_alignStart="@id/ll_1"
            android:layout_marginStart="9dp"
            android:paddingStart="13dp"
            android:paddingTop="12dp"
            android:paddingEnd="3dp"
            android:paddingBottom="2dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginTop="27dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_3"
            android:layout_width="101dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_charts23"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nickname3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLength="6"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
                <ImageView
                    android:id="@+id/iv_level3"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="4dp"
                    />
                <ImageView
                    android:id="@+id/iv_country3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="2dp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_score3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ff4a53"
                android:textSize="17sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="2dp"
                android:drawableStart="@mipmap/icon_charts_heart" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_headimg3"
            android:layout_width="73dp"
            android:layout_height="72dp"
            android:src="@mipmap/img_charts_head"
            android:background="@mipmap/bg_charts_head3"
            android:layout_alignStart="@id/ll_3"
            android:layout_marginStart="9dp"
            android:paddingStart="12dp"
            android:paddingTop="11dp"
            android:paddingEnd="3dp"
            android:paddingBottom="2dp"
            />
    </RelativeLayout>
</LinearLayout>