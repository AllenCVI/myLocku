<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="359dp"
            android:src="@mipmap/bg_splash_act"
            />

<!--        <ImageView-->
<!--            android:layout_width="130dp"-->
<!--            android:layout_height="45dp"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            android:layout_marginTop="171dp"-->
<!--            android:scaleType="centerCrop"-->
<!--            android:src="@mipmap/login_index_logo"/>-->

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="320dp"
            android:layout_height="46dp"
            android:layout_above="@id/ll_faceGoogle"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="17dp"
            android:background="@drawable/shape_ff4a52"
            android:elevation="5dp"
            android:gravity="center"
            android:text="@string/one_click_register"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:translationZ="5dp"/>



        
        <LinearLayout
            android:id="@+id/ll_faceGoogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/tv_login"
            android:orientation="horizontal"
            >
            
            <ImageView
                android:id="@+id/iv_google"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:src="@mipmap/login_google_icon"
                android:visibility="gone"
                />

            <View
                android:layout_width="18dp"
                android:layout_height="1dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/iv_faceBook"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:src="@mipmap/login_facebook_icon"
                />
            
        </LinearLayout>
        
        
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_content"
            android:layout_centerHorizontal="true"
            android:text="@string/click_here_for_old_accounts"
            android:textColor="#4dffffff"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/ll_bottom"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:textSize="11sp"
            android:text="@string/register_content"
            android:textColor="#4dffffff"/>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/register_platform"
                android:textSize="11sp"
                android:textColor="#4dffffff"/>

            <TextView
                android:id="@+id/tv_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/register_user_agreement"
                android:textSize="11sp"
                android:layout_marginStart="5dp"
                android:textColor="@color/color_ff4a52"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/register_and"
                android:textSize="11sp"
                android:layout_marginHorizontal="5dp"
                android:textColor="#4dffffff"/>
            <TextView
                android:id="@+id/tv_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/register_policy"
                android:textSize="11sp"
                android:textColor="@color/color_ff4a52"/>

        </LinearLayout>


    </RelativeLayout>



</LinearLayout>