<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:background="#16143c"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/diamond_is_sufficient"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:paddingBottom="23dp"
            android:paddingTop="113dp"/>
        <LinearLayout
            android:layout_width="262dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_marginBottom="15dp">
            <TextView android:id="@+id/tv_recharge_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bg_dialog_cancel"
                android:gravity="center"
                android:text="@string/cancel"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="15dp"
                android:paddingStart="17dp"
                android:paddingEnd="17dp"/>
            <TextView android:id="@+id/tv_recharge_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="15dp"
                android:background="@drawable/bg_dialog_confirm"
                android:gravity="center"
                android:text="@string/diamond_recharge_confirm"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginEnd="15dp"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView android:id="@+id/iv_recharge_top"
        android:layout_width="282dp"
        android:layout_height="141dp"
        android:src="@mipmap/icon_top_dialog"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>