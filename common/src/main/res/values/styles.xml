<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_16143c</item>
        <item name="colorPrimaryDark">@color/color_16143c</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowBackground">@color/color_16143c</item>
        <item name="android:textViewStyle">@style/TextViewStyle.TextDirection</item>
        <item name="editTextStyle">@style/EditTextStyle.Alignment</item>
    </style>

    <style name="EditTextStyle.Alignment" parent="Widget.AppCompat.EditText">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">start</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="TextViewStyle.TextDirection" parent="Widget.AppCompat.TextView">
        <item name="android:textDirection">locale</item>
    </style>

</resources>